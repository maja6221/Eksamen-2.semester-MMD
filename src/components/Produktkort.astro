---
const { image, designer, data, tekst, overskrift, pris, link, aktiv } = Astro.props;
console.log(data);
---

<a href={link}>
  <article >
    <img src={image} alt="image" />
    <div class="div1">
      <h2>{overskrift}</h2>
      <h3>{designer}</h3>
      <h3>{pris} <span>DKK</span></h3>
      <!-- <p>{tekst}</p> -->
      <button>SHOP NU</button>
    </div>
  </article>
</a>

<style>
  img {
    width: 100%;
  }

  button {
    font-family: "commuters-sans", sans-serif;
    font-size: 20px;
    margin: 20px;
    width: 200px;
    border: none;
    background-color: #343333;
    color: white;
    padding: 10px;
    cursor: pointer;
  }

  button:hover {
    background-color: whitesmoke;
    color: #343333;
    cursor: pointer;
  }

  .div1 {
    display: grid;
    justify-items: center;
  }

  a {
    text-decoration: none;
  }

